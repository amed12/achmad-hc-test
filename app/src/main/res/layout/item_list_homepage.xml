<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_padding_normal"
    app:cardCornerRadius="@dimen/margin_padding_tiny"
    app:cardElevation="@dimen/margin_padding_tiny">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_list_homepage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_banner_height"
            android:adjustViewBounds="true"
            android:contentDescription="@string/cd_image_button"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/tv_list_homepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="@dimen/margin_padding_small"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            tools:text="@tools:sample/lorem" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

